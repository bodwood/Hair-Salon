@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h1>New Client</h1>

@using (Html.BeginForm())
{
  <div class="row">
    <div class="col">
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)</div>
<div class="col">
  @Html.LabelFor(model => model.Stylist)
  @Html.DropDownList("StylistId")
</div>
<div class="col">
<button class="btn btn-success"><input id="" type="submit" value="Add new client" class="btn btn-default" /></button>
</div>
</div>
}
<button id="showAllClientsBtn"class="btn btn-success btn-lg">@Html.ActionLink("Show all clients", "Index")</button>


<h5>Note: A stylist must be added before a client can be added</h5>
<div class="row">

  <div class="col">

    <button class="btn btn-info btn-lg">@Html.ActionLink("Click Here: Create Stylist", "Create", "Stylists")</button>
  </div>
</div>