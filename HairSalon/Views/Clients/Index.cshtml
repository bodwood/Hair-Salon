@{
  Layout = "_Layout";
}

@using HairSalon.Models;

<h1>Clients</h1>
@if (@Model.Count == 0)
{
  <h2>No Clients have been added</h2>
}
else
{
  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Description}", "Details", new { id = client.ClientId}) | @client.Stylist.Name</li>
    }
  </ul>
}
<div class="row" id="clientIndexBtns">
  <div class="col">
    <button class="btn btn-success btn-lg">@Html.ActionLink("Add new client", "Create")</button>
  </div>

  <div class="col">
    <button class="btn btn-danger btn-lg">@Html.ActionLink("Home", "Index", "Home")</button>
    <div>

    </div>
