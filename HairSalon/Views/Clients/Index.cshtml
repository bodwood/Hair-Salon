@{
  Layout = "_Layout";
}

@using HairSalon.Models;

@if (@Model.Count == 0)
{
  <h2>No Clients have been added</h2>
}
else{
  <ul>
    @foreach (Client client in Model)
    {
      <li>@Html.ActionLink($"{client.Description}", "Details", new { id = client.ClientId}) | @client.Stylist.Name</li>
    }
  </ul>
}

<button>@Html.ActionLink("Add new client", "Create")</button>
<button>@Html.ActionLink("Home", "Index", "Home")</button>