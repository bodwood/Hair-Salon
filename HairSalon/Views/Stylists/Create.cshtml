@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h1>New Stylist</h1>
@using (Html.BeginForm())
{
  <div class="row">
    <div class="col" id="newStylistName">
      @Html.LabelFor(model => model.Name)
      @Html.TextBoxFor(model => model.Name)
    </div>
    <div class="col" id="newStylistNameBtn">
      <button class="btn btn-success btn-lg"><input type="submit" value="Add" class="btn btn-default" /></button>
    </div>
  </div>
}
<button id="showAllClientsBtn"class="btn btn-info btn-lg">@Html.ActionLink("Show all stylists", "Index")</button>