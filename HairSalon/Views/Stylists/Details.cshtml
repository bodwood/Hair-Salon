@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist
@using HairSalon.Models

<h1>Stylist Details</h1>

<h2>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h2>
@if(@Model.Clients.Count == 0)
{
  <h2>No clients have been added for @Html.DisplayFor(model => model.Name)</h2>
}
else{
  <h2>Clients</h2>
  <ul>
    @foreach (Client client in Model.Clients)
    {
      <li>@Html.ActionLink($"{client.Description}", "Details", "Clients", new { id = client.ClientId})</li>
    }
  </ul>
}

<button>@Html.ActionLink("Edit Stylist", "Edit", new { id = Model.StylistId})</button>
<button>@Html.ActionLink("Delete Stylist", "Delete", new { id = Model.StylistId})</button>
<button>@Html.ActionLink("Back to Stylists", "Index")</button>